{
    "app-id": "org.gabmus.gfeeds",
    "command": "gfeeds",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-version": "42",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--share=network",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=xdg-data/fonts",
        "--persist=xdg-data/fonts",
        "--filesystem=xdg-config/fontconfig",
        "--persist=xdg-config/fontconfig"
    ],
    "modules": [
        "webkit.json",
        "python-deps.json",
        {
            "name": "python-lxml",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py build --with-cython",
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lxml/lxml/releases/download/lxml-4.8.0/lxml-4.8.0.tar.gz",
                    "sha256": "f63f62fc60e6228a4ca9abae28228f35e1bd3ce675013d1dfb828688d50c6e23"
                }
            ]
        },
        {
            "name": "python-pygments",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/pygments/pygments/archive/refs/tags/2.11.2.tar.gz",
                    "sha256": "2ff53b96fae81588e6f4f9147cb45af7d321c67335e5d794f6838f1710154598"
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "commit": "e3a37893a8709aa3d6a571ecb5a3f690da0ef82d"
                }
            ]
        },
        {
            "name": "python-syndom",
            "buildsystem": "meson",
            "config-opts": [
                "-DTO_JSON_BINARY=false",
                "-DPYTHON_BINDINGS=true",
                "-DHTML_SUPPORT=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/gabmus/syndication-domination",
                    "commit": "e503361944ae8f8af5fe281aa61a346f28a0b051"
                }
            ],
            "modules": [
                {
                    "name": "pybind11",
                    "buildsystem": "cmake",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/pybind/pybind11/",
                            "tag": "v2.9.1"
                        },
                        {
                            "type": "patch",
                            "path": "pybind11_flatpak_fix.patch",
                            "sha256": "6c16ce22e230064fedd15b7b68d2bed8a4ecae69f544acaa2f01b43428a4d968"
                        }
                    ]
                },
                {
                    "name": "python-pybind11",
                    "buildsystem": "simple",
                    "build-commands": [
                        "python3 setup.py build",
                        "python3 setup.py install --prefix=/app --root=/"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/pybind/pybind11/",
                            "tag": "v2.9.1"
                        },
                        {
                            "type": "patch",
                            "path": "pybind11_flatpak_fix.patch",
                            "sha256": "6c16ce22e230064fedd15b7b68d2bed8a4ecae69f544acaa2f01b43428a4d968"
                        }
                    ]
                },
                {
                    "name": "pugixml",
                    "buildsystem": "cmake",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/zeux/pugixml",
                            "tag": "v1.12.1"
                        }
                    ]
                },
                {
                    "name": "tidy",
                    "buildsystem": "cmake",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/htacg/tidy-html5",
                            "tag": "5.8.0"
                        }
                    ]
                }
            ]
        },
        {
            "name": "gfeeds",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/gfeeds",
                    "tag": "1.0.2"
                }
            ]
        }
    ]
}
