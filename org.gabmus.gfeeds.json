{
    "app-id": "org.gabmus.gfeeds",
    "command": "gfeeds",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-version": "42",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--share=network",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=xdg-data/fonts",
        "--persist=xdg-data/fonts",
        "--filesystem=xdg-config/fontconfig",
        "--persist=xdg-config/fontconfig"
    ],
    "modules": [
        "python-deps.json",
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "branch": "main",
                    "commit": "e3a37893a8709aa3d6a571ecb5a3f690da0ef82d"
                }
            ]
        },
        {
            "name": "python-syndom",
            "buildsystem": "meson",
            "config-opts": [
                "-DTO_JSON_BINARY=false",
                "-DPYTHON_BINDINGS=true",
                "-DHTML_SUPPORT=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/gabmus/syndication-domination",
                    "branch": "master",
                    "commit": "e503361944ae8f8af5fe281aa61a346f28a0b051"
                }
            ],
            "modules": [
                {
                    "name": "pybind11",
                    "buildsystem": "cmake",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/pybind/pybind11/",
                            "tag": "v2.9.1"
                        },
                        {
                            "type": "patch",
                            "path": "pybind11_flatpak_fix.patch",
                            "sha256": "6c16ce22e230064fedd15b7b68d2bed8a4ecae69f544acaa2f01b43428a4d968"
                        }
                    ]
                },
                {
                    "name": "python-pybind11",
                    "buildsystem": "simple",
                    "build-commands": [
                        "python3 setup.py build",
                        "python3 setup.py install --prefix=/app --root=/"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/pybind/pybind11/",
                            "tag": "v2.9.1"
                        },
                        {
                            "type": "patch",
                            "path": "pybind11_flatpak_fix.patch",
                            "sha256": "6c16ce22e230064fedd15b7b68d2bed8a4ecae69f544acaa2f01b43428a4d968"
                        }
                    ]
                },
                {
                    "name": "pugixml",
                    "buildsystem": "cmake",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/zeux/pugixml",
                            "tag": "v1.12.1"
                        }
                    ]
                },
                {
                    "name": "tidy",
                    "buildsystem": "cmake",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/htacg/tidy-html5",
                            "tag": "5.8.0"
                        }
                    ]
                }
            ]
        },
        "webkit.json",
        {
            "name": "gfeeds",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/gfeeds",
                    "tag": "1.0.0"
                }
            ]
        }
    ]
}